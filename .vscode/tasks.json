{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C++ - Debug Single File",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "-g",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}/out/${fileBasenameNoExtension}.out",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Create out directory"]
    },
    {
      "type": "shell",
      "label": "C++ - Debug Multi File",
      "command": "/usr/bin/clang++ -std=c++17 -stdlib=libc++ -g -Wall ${fileDirname}/*.cpp -o ${fileDirname}/out/a.out -lsfml-graphics -lsfml-window -lsfml-system",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Create out directory"]
    },
    {
      "type": "shell",
      "label": "Create out directory",
      "command": "mkdir",
      "args": ["-p", "${fileDirname}/out"]
    }
  ]
}
